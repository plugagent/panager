###############################################################################
# 1. Common Settings (Repository Secrets: ENV_FILE)
# 모든 환경에서 공통으로 사용하는 설정입니다.
###############################################################################

# LLM (OpenCode Zen, OpenAI Compatible)
LLM_BASE_URL=https://opencode.ai/zen/v1
LLM_API_KEY=
LLM_MODEL=minimax-m2.5-free

# PostgreSQL (Common)
POSTGRES_USER=panager
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_DB=panager

# 로그
LOG_FILE_PATH=/app/logs/panager.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Checkpoint
CHECKPOINT_MAX_TOKENS=4000
CHECKPOINT_TTL_DAYS=30

###############################################################################
# 2. Environment Specific Settings (Environment Secrets: SPECIFIC_ENV)
# 각 환경(production/development)별로 다르게 설정해야 하는 항목입니다.
###############################################################################

# Discord
DISCORD_TOKEN=

# 서비스 포트 (Production: 8000, Development: 8080)
PORT=8000

# 데이터베이스 보안 정보
POSTGRES_PASSWORD=

# OAuth 콜백 주소 (환경별 도메인/포트 반영)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# GitHub OAuth
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URI=http://localhost:8000/auth/github/callback
GITHUB_WEBHOOK_SECRET=

# Notion OAuth
NOTION_CLIENT_ID=
NOTION_CLIENT_SECRET=
NOTION_REDIRECT_URI=http://localhost:8000/auth/notion/callback
